<div class="text">Mensajes</div>

<div class="container">
   <div class="row clearfix">
      <div class="col-lg-12">
         <div class="card chat-app">

            <div id="plist" class="people-list">
               <div class="input-group">
                  <div class="input-group-prepend">
                     <!-- <span class="input-group-text"></span>
                        <i class="fa fa-ellipsis-v"></i> -->
                     <div class="dropdown">
                        <button onclick="optionslist()" class="dropbtn"><i class="fa fa-ellipsis-v"></i></button>
                        <div id="myDropdown1" class="dropdown-content">
                           <a href="#" id="crearGrupo">Crear grupo</a>
                           <a href="#" id="añadirMiembro">Añadir miembro</a>
                           {{!-- <a href="#" id="abanGrupo">Abandonar grupo</a> --}}
                           <a onclick="abanGrupo()">Abandonar grupo</a>
                        </div>
                     </div>
                  </div>
               </div>
               <ul id="ulChats" class="list-unstyled chat-list mt-2 mb-0">
                  
               </ul>
            </div>

            <div class="chat" id="divChatContainer">
               <div class="chat-header clearfix">
                  <div class="row">
                     <div class="col-lg-6">
                        <a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                           <img src="/media/user2.png" alt="avatar">
                        </a>
                        <div class="chat-about">
                           <h6 id="chatName" class="m-b-0"></h6>
                           <small id="members"></small>
                        </div>
                     </div>
                     <div class="col-lg-6 hidden-sm text-right icons_mensajeria">
                        <a href="javascript:void(0);" class="btn btn-outline-secondary"><i
                              class="fa fa-paperclip"></i></a>
                     </div>
                  </div>
               </div>
               <div class="chat-history">
                  <ul id="ulMsg" class="m-b-0">
                     
                  </ul>
               </div>
               <div class="chat-message clearfix">
                  <div class="input-group mb-0" style="margin: 0;">
                     <div class="input-group-prepend">
                        <div class="icono_anashe">
                           <span class="input-group-text icono_icono"><i class="fa fa-send"></i></span>
                        </div>
                     </div>
                     <form id="formMsg">
                        <input type="text" name="text" class="form-control" placeholder="Enter text here..." required>
                        <input type="file" name="file">
                        <button class="btn btn-primary">Enviar</button>
                     </form>
                  </div>
               </div>
               
               <div id="user" class="hid">
                  <p>{{user.user.id}}</p>
                  <p>{{user.user.Nombre}}</p>
               </div>
            </div>

         </div>
      </div>
   </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/script_io_msj.js"></script>