
    <div class="text">Tabla de cursos</div>
      <div class="contenedor_documentacion">
      <div class="contenedor_nombre_doc">
          <button class="layout_boton1" id="selectTodos" onclick="selectTodos()">Seleccionar todos</button>
          <input disabled type="button" class="layout_boton1"  value="Eliminar"  id="eliminarBtn" onclick="submitForm()">
      </div>
      <form action="../api/eliminarCursos" method="post" name="tabla" id="tabla">
        <table class="bordered">
          <tr>
            <th>Curso</th>   
            <th></th>
          </tr>
          {{#each a}}
              <tr>
                <td><label for="checkbox_editarCurso{{ID}}"><a href="../tablaCurso/{{ID}}">{{Nombre_curso}}</a></label></td>
                <td><label for="checkbox_editarCurso{{ID}}"><input type="checkbox" name="{{ID}}" id="checkbox_editarCurso{{ID}}" onchange="verif()"></label></td>
              </tr>
          {{/each}}
        </table>
      </form>
    </div>
<script>
    function selectTodos(){
      if($("input[type=checkbox]:checked").length == $("input[type=checkbox]").length){
        $("input[type=checkbox]").prop('checked', false);
      }else{
        $("input[type=checkbox]").prop('checked', true);
      }
      if($("input[type=checkbox]:checked").length == 0){
        $('#eliminarBtn').prop('disabled',true)
      }else{
        $('#eliminarBtn').prop('disabled',false)
      }
    }

    function verif(){
      if($("input[type=checkbox]:checked").length == 0){
        $('#eliminarBtn').prop('disabled',true)
      }else{
        $('#eliminarBtn').prop('disabled',false)
      }
    }

    function submitForm(){
      let s;
      $("input[type=checkbox]:checked").length == 1 ? s = 'Esta seguro de eliminar el curso seleccionado' : s = 'Esta seguro de eliminar los cursos seleccionados'
      if(confirm(s))
        $('#tabla').submit();
    }
</script>
